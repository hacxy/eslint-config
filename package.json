{
  "name": "@hacxy/eslint-config",
  "type": "module",
  "version": "0.0.3",
  "description": "Hacxy eslint config",
  "author": {
    "name": "hacxy",
    "email": "hacxy.js@outlook.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./vue": {
      "import": "./dist/vue.js",
      "require": "./dist/vue.cjs"
    },
    "./nodejs": {
      "import": "./dist/nodejs.js",
      "require": "./dist/nodejs.cjs"
    },
    "./react": {
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    }
  },
  "main": "index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --format esm,cjs --watch",
    "build": "tsup --format esm,cjs --clean",
    "lint": "eslint --flag unstable_ts_config . --fix",
    "prepublishOnly": "npm run build",
    "release": "bumpp && pnpm publish",
    "prepare": "simple-git-hooks",
    "test": "vitest run"
  },
  "peerDependencies": {
    "eslint": "^9.10.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "^3.11.2"
  },
  "devDependencies": {
    "bumpp": "^9.9.0",
    "jiti": "^2.4.1",
    "lint-staged": "^15.2.11",
    "simple-git-hooks": "^2.11.1",
    "tsup": "8.3.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node scripts/git-hooks/commit-msg.mjs"
  },
  "lint-staged": {
    "*": [
      "eslint --flag unstable_ts_config . --fix"
    ]
  }
}
