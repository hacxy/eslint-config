{
  "name": "@hacxy/eslint-config",
  "type": "module",
  "version": "0.0.6",
  "description": "Hacxy eslint config",
  "author": {
    "name": "hacxy",
    "email": "hacxy.js@outlook.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./vue": {
      "import": "./dist/vue.js",
      "require": "./dist/vue.cjs"
    },
    "./nodejs": {
      "import": "./dist/nodejs.js",
      "require": "./dist/nodejs.cjs"
    },
    "./react": {
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    }
  },
  "main": "index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --format esm,cjs --watch",
    "build": "tsup --format esm,cjs --clean",
    "lint": "eslint --flag unstable_ts_config .",
    "lint:fix": "eslint --flag unstable_ts_config . --fix",
    "test": "vitest run",
    "commit": "git-cz",
    "prepublishOnly": "npm run build",
    "prepare": "simple-git-hooks",
    "release": "node scripts/release.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "peerDependencies": {
    "eslint": "^9.17.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "eslint-plugin-format": "^0.1.3"
  },
  "devDependencies": {
    "bumpp": "^9.9.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-git": "^1.11.0",
    "execa": "^9.5.2",
    "jiti": "^2.4.1",
    "lint-staged": "^15.2.11",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "semver": "^7.6.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "8.3.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/git-hooks/commit-msg.mjs"
  },
  "lint-staged": {
    "*": [
      "eslint --flag unstable_ts_config --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": false
    }
  }
}
